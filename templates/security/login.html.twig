{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="sign-in-form">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}



        <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
        <label for="inputUsername" class="sign-in-form-username">Username</label>
        <input type="text" class="sign-in-form-username" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        <label for="inputPassword" class="sign-in-form-password">Password</label>
        <input type="password" name="password" class="sign-in-form-password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>


        <button class="btn btn-lg btn-primary sign-in-form-button" type="submit">
            Sign in
        </button>

    </form>

    <div>
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©?</a>
    </div>
    </div>



{% endblock %}
